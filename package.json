{
    "name": "xlang-extension",
    "displayName": "XLang Extension",
    "description": "XLang语言支持",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "xlang",
                "aliases": [
                    "XLang",
                    "xlang"
                ],
                "extensions": [
                    ".x",
                    ".xlang"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "xlang.run",
                "title": "运行XLang文件"
            },
            {
                "command": "xlang.diagnose",
                "title": "XLang诊断"
            },
            {
                "command": "xlang.triggerCompletion",
                "title": "XLang代码补全"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == xlang",
                    "command": "xlang.run",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceExtname == .x",
                    "command": "xlang.run",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "XLang",
            "properties": {
                "xlang.runtimePath": {
                    "type": "string",
                    "default": "XLang-Rust",
                    "description": "XLang运行时可执行文件的路径"
                },
                "xlang.useFullPath": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否使用完整路径调用XLang可执行文件"
                },
                "xlang.workingDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "运行XLang时使用的工作目录，默认为文件所在目录"
                },
                "xlang.shellType": {
                    "type": "string",
                    "enum": [
                        "default",
                        "bash",
                        "sh",
                        "powershell",
                        "cmd"
                    ],
                    "default": "default",
                    "description": "使用的Shell类型"
                },
                "xlang.lspPort": {
                    "type": "number",
                    "default": 9257,
                    "description": "LSP服务器使用的端口号"
                },
                "xlang.semanticHighlighting": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否启用语义着色功能"
                }
            }
        },
        "semanticTokenTypes": [
            {
                "id": "null",
                "description": "空值标记",
                "superType": "keyword"
            },
            {
                "id": "boolean",
                "description": "布尔值标记",
                "superType": "keyword"
            },
            {
                "id": "base64",
                "description": "Base64编码数据",
                "superType": "string"
            },
            {
                "id": "let",
                "description": "变量声明",
                "superType": "variable"
            },
            {
                "id": "body",
                "description": "代码块主体",
                "superType": "namespace"
            },
            {
                "id": "boundary",
                "description": "边界标记",
                "superType": "operator"
            },
            {
                "id": "assign",
                "description": "赋值操作",
                "superType": "operator"
            },
            {
                "id": "lambdaDef",
                "description": "Lambda定义",
                "superType": "function"
            },
            {
                "id": "expressions",
                "description": "表达式",
                "superType": "variable"
            },
            {
                "id": "lambdaCall",
                "description": "Lambda调用",
                "superType": "function"
            },
            {
                "id": "asyncLambdaCall",
                "description": "异步Lambda调用",
                "superType": "function"
            },
            {
                "id": "operation",
                "description": "操作符",
                "superType": "operator"
            },
            {
                "id": "tuple",
                "description": "元组",
                "superType": "struct"
            },
            {
                "id": "assumeTuple",
                "description": "推断元组",
                "superType": "struct"
            },
            {
                "id": "keyValue",
                "description": "键值对",
                "superType": "operator"
            },
            {
                "id": "indexOf",
                "description": "索引操作",
                "superType": "operator"
            },
            {
                "id": "getAttr",
                "description": "获取属性",
                "superType": "operator"
            },
            {
                "id": "return",
                "description": "返回语句",
                "superType": "keyword"
            },
            {
                "id": "raise",
                "description": "异常抛出",
                "superType": "keyword"
            },
            {
                "id": "if",
                "description": "条件语句",
                "superType": "keyword"
            },
            {
                "id": "while",
                "description": "循环语句",
                "superType": "keyword"
            },
            {
                "id": "namedTo",
                "description": "命名指向",
                "superType": "variable"
            },
            {
                "id": "break",
                "description": "中断循环",
                "superType": "keyword"
            },
            {
                "id": "continue",
                "description": "继续循环",
                "superType": "keyword"
            },
            {
                "id": "range",
                "description": "范围操作",
                "superType": "operator"
            },
            {
                "id": "in",
                "description": "包含判断",
                "superType": "keyword"
            },
            {
                "id": "yield",
                "description": "生成器产出",
                "superType": "keyword"
            },
            {
                "id": "alias",
                "description": "别名定义",
                "superType": "variable"
            },
            {
                "id": "set",
                "description": "集合类型",
                "superType": "type"
            },
            {
                "id": "map",
                "description": "映射类型",
                "superType": "type"
            }
        ],
        "semanticTokenScopes": [
            {
                "scopes": {
                    "comment" : ["comment.block.xlang"]
                }
            },
            {
                "scopes": {
                    "null": ["constant.language.null.xlang"]
                }
            },
            {
                "scopes": {
                    "boolean": ["constant.language.boolean.xlang"]
                }
            },
            {
                "scopes": {
                    "base64": ["string.base64.xlang"]
                }
            },
            {
                "scopes": {
                    "let": ["keyword.operator.arithmetic.xlang"]
                }
            },
            {
                "scopes": {
                    "body": ["entity.name.section.body.xlang"]
                }
            },
            {
                "scopes": {
                    "boundary": ["keyword.operator.arithmetic.xlang"]
                }
            },
            {
                "scopes": {
                    "assign": ["keyword.operator.arithmetic.xlang"]
                }
            },
            {
                "scopes": {
                    "lambdaDef": ["entity.name.function.lambda.xlang"]
                }
            },
            {
                "scopes": {
                    "expressions": ["comment.block.xlang"]
                }
            },
            {
                "scopes": {
                    "lambdaCall": ["meta.function-call.lambda.xlang"]
                }
            },
            {
                "scopes": {
                    "asyncLambdaCall": ["meta.function-call.async.xlang"]
                }
            },
            {
                "scopes": {
                    "operation": ["keyword.operator.arithmetic.xlang"]
                }
            },
            {
                "scopes": {
                    "tuple": ["support.type.tuple.xlang"]
                }
            },
            {
                "scopes": {
                    "assumeTuple": ["support.type.assumeTuple.xlang"]
                }
            },
            {
                "scopes": {
                    "keyValue": ["keyword.operator.arithmetic.xlang"]
                }
            },
            {
                "scopes": {
                    "indexOf": ["keyword.operator.index.xlang"]
                }
            },
            {
                "scopes": {
                    "getAttr": ["keyword.operator.arithmetic.xlang"]
                }
            },
            {
                "scopes": {
                    "return": ["keyword.control.flow.return.xlang"]
                }
            },
            {
                "scopes": {
                    "raise": ["keyword.control.exception.xlang"]
                }
            },
            {
                "scopes": {
                    "if": ["keyword.control.conditional.xlang"]
                }
            },
            {
                "scopes": {
                    "while": ["keyword.control.loop.xlang"]
                }
            },
            {
                "scopes": {
                    "namedTo": ["keyword.operator.arithmetic.xlang"]
                }
            },
            {
                "scopes": {
                    "break": ["keyword.control.loop.break.xlang"]
                }
            },
            {
                "scopes": {
                    "continue": ["keyword.control.loop.continue.xlang"]
                }
            },
            {
                "scopes": {
                    "range": ["constant.operator.range.xlang"]
                }
            },
            {
                "scopes": {
                    "in": ["keyword.operator.comparison.in.xlang"]
                }
            },
            {
                "scopes": {
                    "yield": ["keyword.control.flow.yield.xlang"]
                }
            },
            {
                "scopes": {
                    "alias": ["entity.name.type.alias.xlang"]
                }
            },
            {
                "scopes": {
                    "set": ["support.type.set.xlang"]
                }
            },
            {
                "scopes": {
                    "map": ["support.type.map.xlang"]
                }
            }
        ],
        "keybindings": [
            {
                "command": "xlang.run",
                "key": "f5",
                "mac": "f5",
                "when": "editorLangId == xlang"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "echo 'No compilation needed'",
        "watch": "echo 'Watch mode not supported'"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sjrsjz/XLang-Extension.git"
    },
    "keywords": [
        "vscode",
        "xlang",
        "extension",
        "language",
        "lsp"
    ],
    "author": "sjrsjz",
    "license": "MIT",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/sjrsjz/XLang-Extension/issues"
    },
    "homepage": "https://github.com/sjrsjz/XLang-Extension#readme",
    "icon": "images/icon.ico",
    "publisher": "sjrsjz"
}
