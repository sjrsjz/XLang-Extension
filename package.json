{
    "name": "xlang-extension",
    "displayName": "XLang",
    "description": "XLang 编程语言支持",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:xlang",
        "onCommand:xlang.run"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "xlang",
                "aliases": [
                    "XLang",
                    "xlang"
                ],
                "extensions": [
                    ".x"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "xlang",
                "scopeName": "source.xlang",
                "path": "./syntaxes/xlang.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "xlang.run",
                "title": "Run XLang File",
                "category": "XLang"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == xlang",
                    "command": "xlang.run",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceExtname == .x",
                    "command": "xlang.run",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "XLang",
            "properties": {
                "xlang.runtimePath": {
                    "type": "string",
                    "default": "XLang-Rust",
                    "description": "XLang 运行时可执行文件的路径"
                },
                "xlang.useFullPath": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否使用完整路径调用 XLang 运行时"
                },
                "xlang.workingDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "运行 XLang 文件时的工作目录"
                },
                "xlang.shellType": {
                    "type": "string",
                    "enum": [
                        "default",
                        "bash",
                        "sh",
                        "powershell",
                        "cmd"
                    ],
                    "default": "default",
                    "description": "使用的终端类型"
                },
                "xlang.lsp.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否启用 XLang 语言服务器"
                },
                "xlang.lsp.logLevel": {
                    "type": "string",
                    "enum": [
                        "off",
                        "error",
                        "warn",
                        "info",
                        "debug",
                        "trace"
                    ],
                    "default": "info",
                    "description": "语言服务器日志级别"
                },
                "xlang.lspPort": {
                    "type": "number",
                    "default": 9257,
                    "description": "XLang LSP服务器使用的TCP端口"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "echo 'No compilation needed'",
        "watch": "echo 'Watch mode not supported'"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sjrsjz/XLang-Extension.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/sjrsjz/XLang-Extension/issues"
    },
    "homepage": "https://github.com/sjrsjz/XLang-Extension#readme"
}