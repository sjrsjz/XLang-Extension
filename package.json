{
    "name": "xlang-extension",
    "displayName": "XLang Extension",
    "description": "XLang语言支持",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:xlang",
        "onCommand:xlang.run",
        "onCommand:xlang.diagnose"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "xlang",
                "aliases": [
                    "XLang",
                    "xlang"
                ],
                "extensions": [
                    ".x",
                    ".xlang"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "xlang",
                "scopeName": "source.xlang",
                "path": "./syntaxes/xlang.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "xlang.run",
                "title": "运行XLang文件"
            },
            {
                "command": "xlang.diagnose",
                "title": "XLang诊断"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == xlang",
                    "command": "xlang.run",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceExtname == .x",
                    "command": "xlang.run",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "XLang",
            "properties": {
                "xlang.runtimePath": {
                    "type": "string",
                    "default": "XLang-Rust",
                    "description": "XLang运行时可执行文件的路径"
                },
                "xlang.useFullPath": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否使用完整路径调用XLang可执行文件"
                },
                "xlang.workingDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "运行XLang时使用的工作目录，默认为文件所在目录"
                },
                "xlang.shellType": {
                    "type": "string",
                    "enum": [
                        "default",
                        "bash",
                        "sh",
                        "powershell",
                        "cmd"
                    ],
                    "default": "default",
                    "description": "使用的Shell类型"
                },
                "xlang.lspPort": {
                    "type": "number",
                    "default": 9257,
                    "description": "LSP服务器使用的端口号"
                }
            }
        },
        "keybindings": [
            {
                "command": "xlang.run",
                "key": "f5",
                "mac": "f5",
                "when": "editorLangId == xlang"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "echo 'No compilation needed'",
        "watch": "echo 'Watch mode not supported'"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sjrsjz/XLang-Extension.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/sjrsjz/XLang-Extension/issues"
    },
    "homepage": "https://github.com/sjrsjz/XLang-Extension#readme"
}
